<phpunit bootstrap="tests/bootstrap.php" colors="true">
    <testsuites>
        <testsuite name="unit">
            <directory>tests/Unit</directory>
        </testsuite>
        <testsuite name="functional">
            <directory>tests/Functional</directory>
        </testsuite>
    </testsuites>
    <php>
        <env name="DEV_MODE" value="1" force="true"/>
        <env name="DB_HOST" value="localhost" force="true"/>
        <env name="DB_PORT" value="3306" force="true"/>
        <env name="DB_NAME" value="servermail_test" force="true"/>
        <env name="DB_USER" value="root" force="true"/>
        <env name="DB_PASS" value="root" force="true"/>
        <env name="APP_SECRET" value="verysecretkey" force="true"/>
    </php>
    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">src</directory>
        </whitelist>
    </filter>
</phpunit>
